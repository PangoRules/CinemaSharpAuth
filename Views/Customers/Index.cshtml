@model IEnumerable<CinemaSharpAuth.Models.Customer>

@{
    ViewBag.Title = "Customers Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<p>
	@Html.ActionLink("New Customer", "New", "Customers", null, new { @class = "btn btn-primary" })
</p>
@if(Model.Count()>0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Customer</th>
                <th>Membership Type</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var customer in Model)
            {
                <tr class="table-dark">
                    <th scope="row"><a href=/customers/edit/@customer.Id>@customer.Name</a></th>
                    <th>@customer.MembershipType.Name</th>
                    <th>@customer.MembershipType.DiscountRate%</th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No customers available at the current moment.</p>
}
