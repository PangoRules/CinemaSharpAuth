@model CinemaSharpAuth.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*
    This is a comment on multiple lines, the following class aplies when there are more than 5 customers
*@
@{
    var popularClass = Model.Customers.Count > 5 ? "popular" : null;
}

<h2 class="@popularClass">@Model.Movie.Name</h2>
@if(Model.Customers.Count == 0)
{
    <p>No customers have rented yet.</p>
}
else
{
    <ul>
        @foreach(var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}

