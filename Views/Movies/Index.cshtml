@{
    ViewBag.Title = "Movies Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>
<p>
	@Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
</p>
<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @*@foreach(var movie in Model)
        {
            <tr class="table-dark">
                <th scope="row"><a href=/Movies/Edit/@movie.Id>@movie.Name</a></th>
                <th>@movie.Genre.Name</th>
            </tr>
        }*@
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            //Initializing datatable in a variable
            var dataTable = $("#movies").DataTable({
                //Ajax call to get list of movies from de API
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                //Custom columns to render in data table
                columns: [
					//Name column
					{
						data: "name",
						render: function (data, type, row) {
							return "<a href='/movies/edit/" + row.id + "'>" + row.name + "</a>";
						}
                    },
					//Genre.name column
					{
						data: "genre.name",
                    },
                    //Actions column
					{
                        data: "id",
						render: function (data, type, row) {
							return "<button data-movie-id=" + row.id + " class='btn-link js-delete'>Delete</button>"
						}
					},
                ]
            });

			$("#movies").on("click", ".js-delete", function () {
				var button = $(this);

				bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
					if (result) {
						$.ajax({
							url: "/api/movies/" + button.attr("data-movie-id"),
							method: "DELETE",
							success: function () {
								//Use without datatable
								/*button.parents("tr").remove();*/
								table.row(button.parents("tr")).remove().draw();
							},
						});
					}
				});
			});
        });
    </script>
}